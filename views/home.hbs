{{!-- =============================
        main section start
=============================== --}}
<main>
{{!-- =============================
        home section start
=============================== --}}
<section id="home">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-6">
                <div class="box_2">
                    <a href="/add"><i class="fas fa-plus"></i></a>
                </div>
            </div>
            {{#each post_home}}
            <div class="col-lg-4 col-md-4 col-sm-6">
                <div class="box">
                    <div class="content">
                        <p>Name: <span>{{name}}</span></p>
                        <p>Number: <span>{{number}}</span></p>
                    </div>
                    <div class="edit_delete">
                        <a href="/edit/{{_id}}"><i class="fas fa-pencil-alt"></i></a>
                        <a href="/delete/{{_id}}"><i class="fas fa-trash-alt"></i></a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
{{!-- =============================
        home section end
=============================== --}}
</main>
{{!-- =============================
        main section end
=============================== --}}